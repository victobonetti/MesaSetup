networks:
  servicos:
    external:
      name: servicos

services:
  nginx:
    container_name: nginx
    image: nginx
    restart: always
    volumes:
      - /etc/mesa/configs/nginx/nginx.conf:/etc/nginx/nginx.conf:ro
    ports:
      - "80:80"
      - "443:443"
    environment:
      - NGINX_HOST=mesa.com
      - NGINX_PORT=80
    networks:
      - servicos

  mongodb:
    image: mongo:4.4.6
    restart: always
    environment:
       - MONGO_INITDB_ROOT_USERNAME={{ secrets.mongodb.user }}
       - MONGO_INITDB_ROOT_PASSWORD={{ secrets.mongodb.pass }}
    healthcheck:
      test: ["CMD","mongo", "--eval", "db.adminCommand('ping')"]
      interval: 10s
      timeout: 10s
      retries: 5
    networks:
      - servicos
    ports:
      - "27017:27017"

  mesa-auth:
    image: "{{ docker_account }}/mesa-auth:2024.3.17"
    container_name: "auth"
    restart: always
    environment:
        - SELF_NAME=auth
        - CLIENT_NAME={{ client_name | default('client') }}
        - AUTH_SECRET={{ secrets.auth.secret }}
        - ENCRYPTION_KEY=ZmDfcTF7_60GrrY167zsiPd67pEvs0aGOv2oasOM1Pg=
        - DB_HOST=mongodb
        - DB_USER={{ secrets.mongodb.user }}
        - DB_PASS={{ secrets.mongodb.pass }}
    networks:
      - servicos
    depends_on:
      - mongodb
    ports:
      - "5000:5000"

  mesa-person:
    image: "{{ docker_account }}/mesa-person:2024.3.9"
    container_name: "person"
    restart: always
    environment:
        - AUTH_URL=http://auth:5000/auth
        - DB_HOST=mongodb
        - DB_USER={{ secrets.mongodb.user }}
        - DB_PASS={{ secrets.mongodb.pass }}
    networks:
      - servicos
    depends_on:
      - mesa-auth
    ports:
      - "5001:5000"
